    <div class='allcontent'>
    <h1 id='history'><span><i class="fas fa-users" ></i></span>Jobseeker List</h1>
    <div class='content' >
        <div style="padding: 10px 10px 10px ;border-radius: 0px;" class="bg-drtail overflow-hidden">
        
            <div  class="panel-group panel-group-a" id="accordion" role="tablist" aria-multiselectable="true">
                <div  style="background-color:gainsboro;border-radius: 0px;" class="panel panel-default margin-bottom" >
                    
                    <div style="background-color:black; color: white;border-radius: 0px;" class="panel panel-default margin-bottom">
                        
                        <div class="container" style="margin-top: 10px;">
                    
                        <p class='apply'>History Jobseeker Apply</p>
                    </div>
                    </div>
                    <div id='b' style="background-color:gainsboro;border-radius: 0px;height:705px;overflow: auto;" class="panel panel-default margin-bottom" >
                    <% job.forEach((findjob)=>{ %>
                        <% findjob.jobresume.forEach((user)=>{ %>
                        <div  style="background-color:	white;color: black;padding-bottom:15px;border-radius: 0px;"class="panel panel-default margin-bottom"" >
                            <div class="container" style="margin-top: 10px;">   
                               
                       <div class='grid' >
                            <div class='pic' >
                              
                                <figure >
                                    <img class="img-thumbnail"  src="/images/img-profile/<%= user.image %>">
                                    </figure>
                          
                                </div>
                                <div class='subcontent'>
                                    <p class="position"  >Job Tiles : <%= findjob.JobPosition %></p>
                                <p class='name'  >Jobseeker : <%= user.Name %>&nbsp&nbsp<%= user.Surname %> </p>                           
                            <p class='country'  ><span><i class="fas fa-globe-asia"></i></span><%= user.Country %>
                                <p class='province' ><span><i class="fas fa-map-marker-alt"></i></span><%= user.Province %></p></p>
                           
                            <a class='download'  href="/resumefile/<%= user.resume %>"> Download File</a>
                       <form style="display: inline;" method="POST" action="/job/jobapplication/<%= findjob._id %>/jobseeker/<%= user._id %>/delete "> <button  type="submit">Reject</button></form>
                    </div>
                </div>
            </div>
            </div> 
    
<%  }) %> 
<%   }) %>  
