    <div class='allcontent'>
    <h1 id='history'><span><i  class="fas fa-history"></i></span>History Job</h1>
<div class='content'  >
    <div style="padding: 10px 10px 10px ;border-radius: 0px;" class="bg-drtail overflow-hidden">
    
        <div  class="panel-group panel-group-a" id="accordion" role="tablist" aria-multiselectable="true">
            <div  style="background-color:gainsboro;border-radius: 0px;" class="panel panel-default margin-bottom" >
                <div style="background-color:black;padding-bottom: 10px;color: white;border-radius: 0px;" class="panel panel-default margin-bottom">
                    <div id='blackbox' class="container" style="margin-top: 10px;">
                    <p class='job' >Job Apply </p>
                    <p class='joblength' > Total <%= user.jobapply.length %> Jobs</p>
                    </div>
                </div>
                    <div id="a" style="background-color:gainsboro;border-radius: 0px;height:740px;overflow: auto;" class="panel panel-default margin-bottom" >
                <% user.jobapply.forEach((findjob)=>{ %>
                    <div style="background-color:	white;color: black;padding-bottom:15px;border-radius: 0px;"class="panel panel-default margin-bottom"" >
                        <div class="container" style="margin-top: 10px;">
                            <p class='applyday' ><%= moment(findjob.Editdate).format('DD/MM/YYYY') %></p>
                       <div class='grid' >
                        <div class='pic' >
                          
                            <figure >
                                <img class="img-xthumbnail" style="margin-left: 20px;max-width: 100%; height: 150px; width: 150px; object-position: 50% 0; object-fit: cover;" src="/images/img-Comprofile/<%= findjob.image %>">
                                </figure>
                      
                               </div>
                            <div class='subcontent' >
                            <p class='position' ><%= findjob.JobPosition %></p>
                        <p ><%= findjob.CompanyName %> </p>
                        <p style="display: inline;">
                          <i style="color: red;margin-right: 10px;" class="fas fa-map-marker-alt"></i><%= findjob.Province %> 
                          <p style="display: inline;"><span><i  class="fas fa-coins"></i></span> <%= findjob.MinimumSalary %> -</p> 
                          <p style="display: inline;"><%= findjob.MaximumSalary %></p> </p>
                         
                        
                    <a class='seemore' href="/job/<%= findjob._id %>">See More</a>
                   <form style="display: inline;" action="/job/apply/<%= findjob._id %>/delete" method="POST"> <button  style="background-color:  #6495ED;border-radius: 3px;color: white;padding: 2px 15px 1px 15px;" type="submit">Clear History</button></form>
                </div>
        
            </div>
           
        </div>
        </div>
                    <%   }) %>  
                </div>
                </div>
            </div>
        </div>
    </div>
