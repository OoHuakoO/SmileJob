
<%- include("partials/headerafter") %>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SmileJob.com</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/profileJob.css">
        <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Mitr:wght@300&display=swap" rel="stylesheet">
       
    </head>
    <h1 style="text-transform: uppercase;text-align: center;margin-top: 40px;font-family: 'Kanit', sans-serif;font-size: 60px;"><i style="margin-right: 50px;color:#280000  ;" class="fas fa-history"></i>History Apply  Job</h1>
<div  style="margin-top: 50px;margin-left: 200px;margin-right: 200px;font-family: 'Bitter', serif;">
    <div style="padding: 10px 10px 10px " class="bg-drtail overflow-hidden">
    
        <div  class="panel-group panel-group-a" id="accordion" role="tablist" aria-multiselectable="true">
            <div style="background-color:gainsboro;" class="panel panel-default margin-bottom" >
                <div style="background-color:	#2F4F4F;padding-bottom: 10px;color: white;" class="panel panel-default margin-bottom">
                    <div class="container" style="margin-top: 10px;">
                    <p  style="display: inline;margin-right:20px;">Job Apply</p>
                    <p style="display: inline;text-indent: 10px;"> Total<%= user.jobapply.length %> Jobs</p>
                </div>
                </div>
                <% user.jobapply.forEach((findjob)=>{ %>
                    <div style="background-color:	white;color: black;padding-bottom:30px;"class="panel panel-default margin-bottom"" >
                        <div class="container" style="margin-top: 10px;">
                            <p style="text-align: right;font-size: 20px;" ><%= moment(findjob.Publicdate).format('DD/MM/YYYY') %></p>
                        <p ><%= findjob.JobPosition %></p>
                        <p ><%= findjob.CompanyName %> </p>
                        <p style="display: inline;"><%= findjob.Province %> <p style="display: inline;"> <%= findjob.MinimumSalary %> -</p> <p style="display: inline;"><%= findjob.MaximumSalary %></p>
                         <a style="display: inline;"  href="/job/<%= findjob._id %>">See more</a>
                        <form style="display: inline;" method="post" action="/job/apply/<%= findjob._id %>/delete ">
                        <button  type="submit">Delete</button>
                        </form>  
                         </p>
                    </div>
                    </div>
                    <%   }) %>  

                </div>
            </div>
        </div>
    </div>


<%- include("partials/footer") %>