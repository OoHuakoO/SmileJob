<%- include("partials/headerafter") %>

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SmileJob.com</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css2?family=Bitter:wght@700&family=Playfair+Display&family=Roboto&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Mitr:wght@300&display=swap" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/profileJob.css">
       
       
    </head>
  <body>

    <div style="margin-top: 150px;margin-left: 30px;margin-right: 30px;border-radius: 0px;font-family: 'Bitter', serif;">
        <div class=" col-lg-12 col-md-3 col-sm-12" >
            <div  class="panel-group panel-group-a" id="accordion" role="tablist" aria-multiselectable="true">
                <div style="background-color:white ;height: 800px;border-radius: 0px;" class="panel panel-default margin-bottom" >
                   
                   <div style="display: flex;"  >
                   
<div  style="flex:50%;background-color:#C0AB8E;background-size: 100%;height: 800px;border-radius: 0px;">
   
    
    <p style="position:absolute;font-size: 60px;left:100px;color: gold;"> Jobseeker  </p><br>
    <p style="position:absolute;font-size: 60px;top: 130px;left:100px;color: gold;"> Profile  </p>
    <p style="position:absolute;font-size: 60px;left:350px;color: gold;border-radius: 50%;border:1px solid;top: 450px;padding: 70px;background-color: white;">  </p>
    <div style="margin-bottom: 20px;">
        
            <img class="img-thumbnail" style="height: 500px;width: 500px;margin-left: 70px;margin-bottom: 30px;border-radius: 50% ;object-fit: cover;object-position: 50% 0;" src="/images/img-profile/<%= jobseek.image %>">
<div style="margin-bottom: 20px;margin-top: 40px;">
<p style="text-align:center;text-transform: uppercase;font-size: 30px;"><%= jobseek.Name %>  &nbsp&nbsp  <%= jobseek.Surname %></p>
</div>
<p style="margin-left: 45px;text-transform: uppercase;font-size: 20px;"><i style="margin-right: 5px;" class="fas fa-phone-square"></i>Tel : <%= jobseek.TelephoneNo %></p>
<p style="display: inline;margin-left: 45px;font-size: 20px;"><span style="text-transform: uppercase;"><i style="margin-right: 5px;" class="fas fa-envelope-open-text"></i>Email :</span> <%= jobseek.email %></p>
</div>
</div>

    <div style="flex:50%;background-color:white;height: 800px;z-index: 1;border-radius: 0px;">
        <a href="/jobseeker/profile/<%= jobseek._id %>/edit" style="font-size: 50px;margin-left: 560px;position: absolute;top: 1px;"><i class="fas fa-edit"></i></a>
          
          <div style="background-color: white;z-index: 1;height: 430px;margin-top: 185px;margin-left: 40px;margin-right: 40px;box-shadow: 5px 5px 15px 5px rgba(50, 50, 50, .5) ;">
            <h1 style="margin-bottom: 30px;text-align: center;margin-top: 30px;background-color: black;color: white;padding-bottom: 10px;padding-top: 10px;">About me</h1>
            <div style="display: flex;" >
                <div style="flex:50%;margin-left: 30px;">
                <div style="margin-right: 50px;margin-left: 10px;">
        <p >ID Card : <span style="margin-left: 1px;"><%= jobseek.IDCard %></span></p>
        <p >Date of Birth : <span style="margin-left: 1px;"><%= moment(jobseek.DateofBirth).format('DD/MM/YYYY') %></span></p>
        <p >Gender : <span style="margin-left: 1px;"><%= jobseek.Gender %></span></p>
        <p>Weight : <span style="margin-left: 1px;"><%= jobseek.Weight %></span></p>
        <p>Height : <span style="margin-left: 1px;"><%= jobseek.Height %></span></p>
        <p >Nationality : <span style="margin-left: 1px;"><%= jobseek.Nationality %></span></p>
        <p >Religion : <span style="margin-left: 1px;"><%= jobseek.Religion %></span></p>
    </div>
    </div>
    <div style="flex: 50%;">
        <div style="margin-right: 10px;">
        <p >Country : <span style="margin-left: 1px;"><%= jobseek.Country %></span></p>
        <p >Address : <span style="margin-left: 1px;"><%= jobseek.Address %></span></p>
        <p >Province : <span style="margin-left: 1px;"><%= jobseek.Province %></span></p>
        <p >District : <span style="margin-left: 1px;"><%= jobseek.District %></span></p>
        <p >Sub District : <span style="margin-left: 1px;"><%= jobseek.SubDistrict %></span></p>
        <p >Zip Code : <span style="margin-left: 1px;"><%= jobseek.ZipCode %></span></p>
    </div>
    </div>
</div>
    <p style="border: solid 3px;position: absolute;z-index: -2;right: 100px;height: 600px;width: 470px;top: 100px;"></p>
    </div>
                     
        </div>
                            </div>           
                                                                      
                   
                </div>
            </div>
        </div>
    </div>

  </body>
<%- include("partials/footer") %>