                            <form style="display: inline;" action="/admin/jobseeker/<%= findjob._id %>/delete" method="POST"> 
                                <button  style="background-color:  red;border-radius: 3px;color: white;padding: 0px 15px 0px 15px;margin-left: 10px;" type="submit">Delete</button>
                            </form>
